<hibernate-configuration>
    <session-factory>
        <!-- Настройка подключения к БД -->
        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.connection.url">jdbc:h2:mem:libdb;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.connection.password"></property>
        <!-- Для автосоздания/обновления схемы БД -->
        <property name="hibernate.hbm2ddl.auto">update</property>
        
        <!-- Регистрация сущностей -->
        <mapping class="ru.vasilev.entity.User"/>
        <mapping class="ru.vasilev.entity.Author"/>
        <mapping class="ru.vasilev.entity.Book"/>
        <mapping class="ru.vasilev.entity.BorrowRecord"/>
    </session-factory>
</hibernate-configuration>